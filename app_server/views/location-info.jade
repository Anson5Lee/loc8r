extends layout
include _includes/sharedHTMLfunctions
block content
  .row.page-header
    .col-lg-12
      h1= title
  .row
    .col-xs-12.col-md-9
      .row
        .col-xs-12.col-sm-6
          p.rating
            +outputRating(rating)
          p= address
          .panel.panel-primary
            .panel-heading
              h2.panel-title Opening hours
            .panel-body
              each facility in facilities
                span.label.label-warning= facility
                  | &nbsp;
                  span.glyphicon.glyphicon-ok
                | &nbsp;
              br
              br
              each line in openingHours
                p#hours= line
        .col-xs-12.col-sm-6.location-map
          .panel.panel-primary
            .panel-heading
              h2.panel-title Location map
            .panel-body
              img.img-responsive.img-rounded(src=locationMap)
      .row
        .col-xs-12
          .panel.panel-primary.review-panel
            .panel-heading
              a.btn.btn-default.pull-right(href=addReviewURL) Add review
              h2.panel-title Customer reviews
            .panel-body.review-container
              each review in custReviews
                .row
                  .review
                    .well.well-sm.review-header
                      span.rating
                        +outputRating(review.rating)
                      span.reviewAuthor= review.author
                      small.reviewTimestamp= review.timestamp
                    .col-xs-12
                      p= review.content

    .col-xs-12.col-md-3
      p.lead= description
      p= endNote


